- var js = ["jada", "angular-instance"]
- var css = ["jada"]
- var title = "James Garner"
doctype html
html
  head
    include partials/_head.jade
  body(ng-app="jadaSite")
    #Wrapper
      aside.tile-column
        .tile-row
          include partials/_tile-me.jade
        .tile-row
          include partials/_tile-me-text.jade
      main.tile-column
        .tile-row
          include partials/_tile-intro.jade
        .tile-row
          include partials/_tile-projects.jade
          include partials/_tile-cv.jade
        .tile-row
          include partials/_tile-git.jade
          include partials/_tile-real-time.jade
        .tile-row.spread-tall.hide#main
          include partials/_tile-main.jade
        div(ng-controller="blogController", ng-show="hasTileRows()")
          h1.fade Blog
          .tile-row(ng-repeat="tileRow in tileRows")
            .tile(ng-repeat="tile in tileRow")
              .tile-content(ng-class="'bg-{{tile.color}}'").fade
                a(data-show-static="blog-{{tile.id}}-content", href="")
                  ul.tags
                    li(ng-repeat="tag in tile.tags")
                      span.fa.fa-tag
                      span {{tag}}
                  h1 {{tile.title}}
                  p(ng-show="tile.subtitle").
                    {{tile.subtitle}}
              .hide(id="blog-{{tile.id}}-content", ng-bind-html="tile.content")